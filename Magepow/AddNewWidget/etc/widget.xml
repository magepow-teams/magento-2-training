<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Magepow\AddNewWidget\Block\Example" id="magepow_addnewwidget_example">
        <label>Widget</label>
        <description>Widget</description>
        <parameters>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text" required="true">
                <label>Title</label>
            </parameter>
            <parameter name="color" sort_order="20" visible="true" xsi:type="select" required="true">
                <label translate="true">Size</label>
                <options>
                    <option name="red" value="red">
                        <label>Red</label>
                    </option>
                    <option name="white" value="white" selected="true">
                        <label>White</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
 